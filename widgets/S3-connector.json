              {
                "label": "EU (Ireland) - eu-west-1",
                "value": "eu-west-1"
              },
              {
                "label": "EU (London) - eu-west-2",
                "value": "eu-west-2"
              },
              {
                "label": "South America (SÃ£o Paulo) - sa-east-1",
                "value": "sa-east-1"
              }
            ]
          }
        }
      ]
    }
  ],
  "outputs": [],
  "filters": [
    {
      "name": "AuthByIAM",
      "condition": {
        "expression": "authenticationMethod == 'Access Credentials'"
      },
      "show": [
        {
          "name": "accessID"
        },
        {
          "name": "accessKey"
        },
        {
          "name": "sessionToken"
        }
      ]
    }
  ]
